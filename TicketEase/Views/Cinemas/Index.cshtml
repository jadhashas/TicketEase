
@*Define modele*@
@model IEnumerable<Cinema>

@*Define ViewData*@
@{
    ViewData["title"] = "Liste of Cinemas";
}

@*Write code*@
<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table table-hover">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.Logo)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                                            <img class="rounded-circle border border-4 border-info" src="@item.Logo" alt="@item.Name" style="max-width: 150px"/>
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(ItemDisplay => item.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(ItemDisplay => item.Description)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Edit </a> |
                            <a class="btn btn-info text-white" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i> Details </a> |
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i> Delete </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div style="position:sticky; right:25px; bottom:25px;" class="text-white">
        <a asp-action="Create" class="btn btn-primary"> <i class="bi bi-plus-circle"></i> Add New </a>
    </div>
</div>


